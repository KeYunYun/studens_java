<%@ page language="java" import="java.util.*" pageEncoding="utf-8" contentType="text/html; charset=utf-8"%>
<%@page import="java.sql.ResultSet"%>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
  <head>
    <base href="<%=basePath%>">
    
    <title>My JSP 'update.jsp' starting page</title>
    
	<meta http-equiv="pragma" content="no-cache">
	<meta http-equiv="cache-control" content="no-cache">
	<meta http-equiv="expires" content="0">    
	<meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
	<meta http-equiv="description" content="This is my page">
	<link rel="stylesheet" href="css/style.css">
     <script src="http://www.my97.net/dp/My97DatePicker/WdatePicker.js"></script>
  </head>
  
  <body>
  
    <form action="OperateS" method="post">
      <%
     ResultSet rs = (ResultSet)request.getAttribute("rs");
     if(rs.next()){
    %> 
      <table align="center" width="400">
       <tr class="Tr"><td>操作编号：<input type="text" name="operateNo" value="<%=rs.getString(1)%>"/></td></tr>
       <tr class="Tr"><td>操作类型：<input type="text" name="operateType" value="<%=rs.getString(2)%>"/></td></tr>
       <tr class="Tr"><td>大棚编号：<input type="text" name="greenHouseNo" value="<%=rs.getString(3)%>"/></td></tr>
       <tr class="Tr"><td>员工编号：<input type="text" name="employeeNo" value="<%=rs.getString(4)%>"/></td></tr>
       <tr class="Tr"><td>操作时间：<input type="text" name="operateDate" value="<%=rs.getDate(5)%>"  onclick="WdatePicker()"/></td></tr>
       <tr class="Tr"><td>生长状况：<input type="text" name="growthSituation" value="<%=rs.getString(6)%>"/></td></tr>
       <tr><td><input type="hidden" name="option" value="update"/></td></tr>
       <tr><td><input type="submit" value="修改作物信息" id="xg"/>
       &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;
       <input type="reset" value="重置" id="rs"/>
       
       </td></tr>
      </table>
       <%}%>
    </form>
   
  </body>
</html>
