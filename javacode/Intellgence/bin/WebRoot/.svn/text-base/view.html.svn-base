<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
    <head>
        <title>view.html</title>
        <meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
        <meta http-equiv="description" content="this is my page">
        <meta http-equiv="content-type" content="text/html; charset=UTF-8">
        <!--<link rel="stylesheet" type="text/css" href="./styles.css">-->
        <style>
            .view {
                width: 619px;
                background-image: url("images/view.jpg");
                height: 351px;
                margin-left: auto;
                margin-right: auto;
            }
            
            .machine {
                width: 60px;
                height: 50px;
                position: absolute;
            }
            
            .mimg {
                margin-left: auto;
                margin-right: auto;
                width: 40px;
                height: 30px;
                background-image: url("images/qj.png");
            }
            
            .mtxt {
                text-align: center;
                width: 60px;
                height: 20px;
                background-color: white;
                font-family: "微软雅黑";
                font-size: 12px;
            }
        </style>
        <script type="text/javascript" src="js/jquery-1.10.2.min.js">
        </script>
        <script type="text/javascript">
            $(document).ready(function(){//当所有html元素都已加载css js img
                //自动访问servlet
                $.ajax({
                    url: "MachineS",//提交的地址
                    type: "post",//提交的方式,
                    data: {
                        "option": 'monitor'
                    },//提交的参数，可以使用数组
                    dataType: 'json',
                    success: function(machines){//obj代表服务器的输出即out的输出
                     // alert(machines);
                        for (var i = 0; i < machines.length; i++) {//遍历数组
                            var $divstr = $("<div class='machine'><div class='mimg'></div><div class='mtxt'><a href='http://" + machines[i].mdesc + "'>"+ machines[i].mname +"</a> </div></div>");
                            //将字符串拼接为html元素
                            $(".content").append($divstr);//在尾部追加
                          
                            $divstr.css("margin-left", machines[i].x).css("margin-top", machines[i].y);
                        }
                    }
                });
            });
        </script>
    </head>
    <body>
        <div class="content">
            <div class="view">
            </div>
        </div>
    </body>
</html>
